# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST /knapsack/tasks               service.controllers.TaskController.createTask(request: Request)

GET /knapsack/tasks/:id            service.controllers.TaskController.getTask(id: String)

GET /knapsack/solutions/:id        service.controllers.SolutionController.getSolution(id: String)

GET /knapsack/admin/tasks          service.controllers.AdminController.getAllTasks

POST /knapsack/admin/shutdown       service.controllers.AdminController.shutdown

#This is the "cancel task" endpoint
DELETE /knapsack/tasks/:id         service.controllers.TaskController.cancelTask(id: String)
